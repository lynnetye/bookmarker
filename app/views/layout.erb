            data-requestvisibleactions="http://schema.org/AddAction"
            data-scope="https://www.googleapis.com/auth/plus.login">
          </span>
        </span> -->


        <a style="cursor:pointer" onclick="login()"/>Login with Google Plus</a>
        <a style="cursor:pointer" onclick="logout()"/>Logout</a>
        <div id="profile"></div>
        <!-- end of google plus signin code -->

        <!-- facebook LOGIN/LOGOUT code -->
        <!-- original -->
        <%= erb :"network/_facebook-login" %>
        <fb:login-button scope="public_profile,email,user_friends" onlogin="checkLoginState();">
        </fb:login-button>
        <div id="status">
        </div>
        <!-- end of facebook LOGIN/LOGOUT code -->
      </div>

    <% end %>
  </nav>
  <%= yield %>

  <script src="/js/application.js"></script>

  <!-- google plus sign in -->
  <script src="/js/google-plus-signin-api.js"></script>

  <!-- google plus sign in -->
</body>
</html>
